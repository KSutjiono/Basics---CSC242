//***ANSWER BELOW
#include <iostream>
using namespace std;

int main(){
  // Initialize sum
  double sum = 0;
  // Add 0.01, 0.02, ..., 0.99, 1 to sum
  // Defines i as 0.01 then if i is less than 1.0 then add 0.01
  // Sum which is 0 + !0.01 until 1.0 is reached
  for (double i = 0.01; i <= 1.0; i = i + 0.01)
    sum += i;
  // Display result
  cout << "The sum is " << sum << endl;

  return 0;}
